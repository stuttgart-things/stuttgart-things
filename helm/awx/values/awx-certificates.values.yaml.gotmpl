---
customresources:
{{- range $k, $v := .Values.instances }}
  {{ $k }}:
    apiVersion: cert-manager.io/v1
    kind: Certificate
    metadata:
      name: {{ $v.hostname }}-ingress
      namespace: {{ $v.namespace }}
    spec:
      commonName: {{ $v.hostname }}.{{ $v.domain }}
      dnsNames:
        - {{ $v.hostname }}.{{ $v.domain }}
      issuerRef:
        name: {{ $v.clusterIssuer }}
        kind: ClusterIssuer
      secretName: {{ $v.ingressSecret }}-tls
{{- end }}
